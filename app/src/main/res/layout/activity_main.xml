<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:paddingHorizontal="80dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:src="@drawable/android_logo"
            />

        <TextView
            android:id="@+id/titleFirst"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Clickable Images"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textStyle="italic"
            android:paddingTop="10dp"
            />



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:rowCount="3"
            android:columnCount="2">


            <ImageView
                android:id="@+id/donut"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_row="0"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:src="@drawable/donut_circle"
                android:onClick="showDonutOrder"
                />
            <TextView
                android:id="@+id/donutMessage"
                android:layout_width="145dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Donuts are glazed and sprinkled with candy."
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:typeface="sans"
                android:textStyle="normal"
                android:paddingTop="25dp"
                />
            <ImageView
                android:id="@+id/icecream"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_row="1"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:src="@drawable/froyo_circle"
                app:srcCompat="@drawable/froyo_circle"
                android:onClick="showFroyoOrder"

                />
            <TextView
                android:id="@+id/froyoMessage"
                android:layout_width="145dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="FroYo is premium self-serve frozen yogurt."
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:typeface="sans"
                android:textStyle="normal"
                android:paddingTop="25dp"
                />
            <ImageView
                android:id="@+id/froyo"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_row="2"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:src="@drawable/icecream_circle"
                android:onClick="showIceCreamOrder"
                />
            <TextView
                android:id="@+id/iceMessage"
                android:layout_width="145dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Ice cream sandwiches have chocolate wafers and vanilla filling. "
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:typeface="sans"
                android:textStyle="normal"
                android:paddingTop="25dp"
                />
            </GridLayout>


        <TextView
            android:id="@+id/signatureFirst"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Frank Berrocal"
            android:textDirection="firstStrong"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textStyle="normal"
            android:textAlignment="viewEnd"
            android:padding="15dp"

            />

    </GridLayout>

</LinearLayout>